@model IEnumerable<ConceptArchitect.BookManagement.Book>








<section class="featured-posts">

	<div class="section-title">

		<h2><span>bookss</span></h2>

	</div>



	<div class="card-columns listfeaturedtag">



		@foreach (var books in Model)

		{

			<!-- begin post -->

			<div class="card">

				<div class="row">

					<div class="col-md-5 wrapthumbnail">

						<a href="bookssList.html">

							<div class="thumbnail" style="background-image: url(@books.Cover);">
							</div>

						</a>

					</div>

					<div class="col-md-7">

						<div class="card-block">

							<h2 class="card-title"><a href="@Url.Action("booklistid", "book", new { id = books.Id })">@books.Title</a></h2>

							@*<h2 class="card-title"><a href="">@books.Name</a></h2>*@

							<h4 class="card-text">@books.Description</h4>

							<div class="metafooter">

								<div class="wrapfooter">

									<span class="meta-footer-thumb">

										<a href="books.html"><img class="books-thumb" src="@books.Cover;d=mm&amp;r=x" alt="@books.Title"></a>

									</span>

									<span class="books-meta">

										<span class="post-name"><a href="books.html">@books.Title</a></span><br />

									</span>

									<span class="post-read-more"><a href="ViewPage.html" title="My Favourites"><svg class="svgIcon-use" width="25" height="25" viewbox="0 0 25 25"><path d="M19 6c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v14.66h.012c.01.103.045.204.12.285a.5.5 0 0 0 .706.03L12.5 16.85l5.662 4.126a.508.508 0 0 0 .708-.03.5.5 0 0 0 .118-.285H19V6zm-6.838 9.97L7 19.636V6c0-.55.45-1 1-1h9c.55 0 1 .45 1 1v13.637l-5.162-3.668a.49.49 0 0 0-.676 0z" fill-rule="evenodd"></path></svg></a></span>

								</div>

							</div>

						</div>

					</div>

				</div>

			</div>

			<!-- end post -->
		}

	</div>

</section>





