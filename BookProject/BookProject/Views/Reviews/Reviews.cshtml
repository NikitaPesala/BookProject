			</th>
			<th>
				@Html.DisplayNameFor(model => model.User.UserEmail)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Rating)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Headline)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Comment)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Book.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.User.UserEmail)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Rating)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Headline)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Comment)
				</td>
				
