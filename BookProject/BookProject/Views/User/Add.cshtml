@{
    Layout = "/Views/Shared/_Layout2.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ConceptArchitect.BookManagement.User
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/LoginRegister.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Signup</title>
</head>
<body >
    <div class="page-container">
        <div class="form-container">
            <center><h2>Signup Here</h2></center>
            <div class="col-md-12">
                <form asp-action="Add" method="POST" class="my-form">
                    <label asp-for="@Model.Email" class='form-label'>Email</label>
                    <input type='text' name="email" value="@Model.Email" class='form-control' required />

                    <label asp-for="@Model.Password" class='form-label'>Password</label>
                    <input type='text' name="password" value="@Model.Password" class='form-control'required />

                    <label asp-for="@Model.Name" class='form-label'>Name</label>
                    <input type='text' name="name" value="@Model.Name" class='form-control' required/>

                    <label asp-for="@Model.Photo" class='form-label'>Photo</label>
                    <input type='text' name="photo" value="@Model.Photo" class='form-control' required/>

                    <input type="submit" value="Add" class='btn btn-primary form-control' />
                    <div class="btn btn-info form-control mt-2">
                        <a class="nav-link text-light" asp-controller="user" asp-action="login">Already have an account? Login Here</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>



