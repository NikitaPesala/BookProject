@using ConceptArchitect.BookManagement
@model User


<form asp-action="Add" method="POST">

    <label asp-for="@Model.UserEmail" class='form-label'>Email</label>
    <input type='text' name="email" value="@Model.UserEmail" class='form-control' />

    <label asp-for="@Model.Password" class='form-label'>Password</label>
    <input type='text' name="password" value="@Model.Password" class='form-control' />

    <label asp-for="@Model.Name" class='form-label'>Name</label>
    <input type='text' name="name" value="@Model.Name" class='form-control' />

    <label asp-for="@Model.Photo" class='form-label'>Photo</label>
    <input type='text' name="photo" value="@Model.Photo" class='form-control' />


    <div>

        <input type="submit" value="Add" class='btn btn-primary form-control' />
        <div class="btn btn-info form-control">
            <a class="nav-link text-light" asp-controller="user" asp-action="login">Need a Account, SignUp Now</a>
        </div>
    </div>
</form>
