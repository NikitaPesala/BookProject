@{
    Layout = "/Views/Shared/_Layout1.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ConceptArchitect.BookManagement.User
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/Login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Login</title>
</head>
<body>

    <div class="page-container">
        <div class="card-container">
            <div class="card">
                <div class="image-container">

                    <img src="https://img.freepik.com/free-vector/mobile-login-concept-illustration_114360-135.jpg?w=2000" alt="Image" class="image">
                </div>
                <div class="form-container">
                    <form asp-action="Login" method="POST" class="my-form">
                        <label asp-for="@Model.Email" class='form-label'>Email</label>
                        <input type='email' name="email" value="@Model.Email" class='form-control' required />

                        <label asp-for="@Model.Password" class='form-label'>Password</label>
                        <input type='password' name="password" value="@Model.Password" class='form-control' required />

                        <div>
                            <input type="submit" value="Login" class='btn btn-primary form-control' />
                        </div>
                        <div class="btn btn-info form-control mt-2">
                            <a class="nav-link text-light" asp-controller="User" asp-action="Add">Don't have an account? Register here</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
